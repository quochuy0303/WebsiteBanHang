@model WebsiteBanHang.Models.Product

@{
    ViewData["Title"] = "Delete Product";
}

<h2>Delete Product</h2>
<form asp-controller="Product" asp-action="Delete" asp-route-id="@Model.IdPro" method="post">
    <div class="form-group">
        <p>Are you sure you want to delete <strong>@Model.NamePro</strong>?</p>
    </div>
    <div class="form-group">
        <input type="submit" value="Delete" class="btn btn-danger" />
        <a asp-controller="Product" asp-action="Index" class="btn btn-secondary">Cancel</a>
    </div>
</form>

